@using Mission8.Models
@model TaskItem
@* Single form used for both adding a new task and editing an existing one (TaskItemId in hidden field). *@
@{
    ViewData["Title"] = "Add/Edit Task";
}

<div>
    <fieldset>
        <legend>Add/Edit Task</legend>
        @* Category options are loaded from the database via ViewBag.Categories. *@
        <form method="post">
            <input asp-for="TaskItemId" type="hidden" />

            <label asp-for="TaskName">Task:</label>
            <input asp-for="TaskName" type="text" />
            <br />

            <label asp-for="DueDate">Due Date:</label>
            <input asp-for="DueDate" type="date" />
            <br />

            <label asp-for="Quadrant">Quadrant:</label>
            <select asp-for="Quadrant">
                <option value="">Select a quadrant</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
            <br />

            <label asp-for="CategoryId">Category:</label>
            <select asp-for="CategoryId">
                <option value="">Select a category</option>
                @foreach (Category c in ViewBag.Categories)
                {
                    <option value="@c.CategoryId">@c.CategoryName</option>
                }
            </select>
            <br />

            <label asp-for="Completed">Completed:</label>
            <select asp-for="Completed">
                <option value="false">No</option>
                <option value="true">Yes</option>
            </select>
            <br />

            <button type="submit">Submit</button>
        </form>
    </fieldset>
</div>